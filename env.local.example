# SKILLIT-AI Platform Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME="SKILLIT-AI"

# UK Market Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY=GBP
NEXT_PUBLIC_DEFAULT_TIMEZONE=Europe/London
NEXT_PUBLIC_DEFAULT_COUNTRY=GB
NEXT_PUBLIC_DEFAULT_LOCALE=en-GB

# Feature Flags
NEXT_PUBLIC_ENABLE_AUCTIONS=true
NEXT_PUBLIC_ENABLE_AI_INTERVIEWS=true
NEXT_PUBLIC_ENABLE_REAL_JOBS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Database (Optional - for future features)
# DATABASE_URL="postgresql://username:password@localhost:5432/skillit_ai"

# Authentication (Optional - for future features)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-secret-key-here"

# AI Services (Optional - for future AI features)
# OPENAI_API_KEY="sk-your-openai-key-here"
# ANTHROPIC_API_KEY="your-anthropic-key-here"

# Email Services (Optional - for contact forms)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# HOTJAR_ID="your-hotjar-id"

# Job APIs (Optional - for real job integration)
# REED_API_KEY="your-reed-api-key"
# INDEED_API_KEY="your-indeed-api-key"
# LINKEDIN_API_KEY="your-linkedin-api-key"

# Supabase (Optional - for database)
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Vercel (Automatically set in production)
# VERCEL_URL (automatically set)
# VERCEL_ENV (automatically set)
